@page
@model CreateNoteModel
@{
    ViewData["Title"] = "Create Note";
}
<h1>@ViewData["Title"]</h1>

<p>You can write down your notes here.</p>
<form method="post" asp-controller="Notes" asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <textarea asp-for="Text"></textarea>
        <span asp-validation-for="Text"></span>
    </div>
    <div>
        <input type="submit" value="Create" class="btn btn-dark">
        <input type="reset" value="Clear" class="btn btn-dark">
    </div>
</form>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
